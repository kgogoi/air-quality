<% include partials/header %>
    <div class="container-fluid">
        <div class="jumbotron" style="background-image: linear-gradient(to top, #a18cd1 0%, #fbc2eb 100%); border: 4px solid #a18cd1; border-radius: 9.5px">
            <h1>Results</h1>
            <hr>
            <p>The Results for the city of <%= data["city_name"] %> are: </p>
        </div>
    </div>
    <div class="container">
        <div class="container text-center" style="width: 50%; margin: 0 auto">
            <div class="panel panel-primary">
                <div class="panel-heading">Concentration of Particulate Matter < 10 microns (µg/m³)</div>
                <div class=panel-body">
                    <%= data["data"][0]["pm10"]%>
                </div>
            </div>
            
            <div class="panel panel-primary">
                <div class="panel-heading">Concentration of Particulate Matter < 2.5 microns (µg/m³)</div>
                <div class=panel-body">
                    <%= data["data"][0]["pm25"]%>
                </div>
            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">Concentration of carbon monoxide (µg/m³)</div>
                <div class=panel-body">
                    <%= data["data"][0]["co"]%>
                </div>
            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">Air Quality Index [US - EPA standard]</div>
                <div class=panel-body">
                    <%= data["data"][0]["aqi"]%>
                </div>
            </div>

        </div>
    </div>
<% include partials/footer %>
